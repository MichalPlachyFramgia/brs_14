<div class="row">
  <p id="notice"><%= notice %></p>
  <h1><%= t "admin.books" %></h1>
  <table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= t "title.title" %></th>
      <th><%= t "title.category_name" %></th>
      <th><%= t "title.publish_date" %></th>
      <th><%= t "title.author" %></th>
      <th><%= t "title.number_page" %></th>
      <th><%= t "title.description" %></th>
      <th><%= t "title.picture" %></th>
    </tr>
  </thead>
    <tbody>
      <%= render @books %>
    </tbody>
  </table>
  <hr>
  <%= will_paginate @books %>
  <br>
  <%= link_to t("admin.book.new_book"), new_admin_book_url %>
</div>
