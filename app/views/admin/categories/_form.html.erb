<%= form_for [:admin, @category] do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, required: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t("submit"), class: "form-control" %>
  </div>
<% end %>
