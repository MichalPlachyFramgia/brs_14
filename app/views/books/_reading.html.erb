<div class="add-reading">
  <% if @reading.nil? %>
    <button type="button" class="btn btn-block btn-default dropdown-toggle" data-toggle="dropdown">
      <%= t "book.mark-not-read" %><span class="caret"></span>
    </button>
  <% elsif @reading.reading? %>
    <button type="button" class="btn btn-block btn-default dropdown-toggle" data-toggle="dropdown">
      <%= t "book.mark-reading" %><span class="caret"></span>
    </button>
  <% else %>
    <button type="button" class="btn btn-block btn-default dropdown-toggle" data-toggle="dropdown">
      <%= t "book.mark-read" %><span class="caret"></span>
    </button>
  <% end %>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to t("book.mark-reading"), readings_path(user_id: current_user.id, book_id: @book.id, status: "reading"),
      class: "btn btn-default btn-block", method: :post, remote: true %></li>
    <li><%= link_to t("book.mark-read"), readings_path(user_id: current_user.id, book_id: @book.id, status: "read"),
      class: "btn btn-default btn-block", method: :post, remote: true %></li>
  </ul>
</div>
