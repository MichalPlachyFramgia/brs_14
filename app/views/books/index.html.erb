<%= search_form_for @q, class: "form-inline" do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.search_field :title_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id_eq, options_from_collection_for_select(@categories, :id, :name,
      (params[:query][:category_id_eq] unless params[:query].nil?)), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <% if signed_in? %>
      <%= f.label :favorite %>
      <%= check_box_tag :favorites, {}, params[:favorites].present?, {class: "form-control inline"} %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <div class="star-rating-filter inline"></div>
  </div>
  <%= f.submit t("search"), class: "btn btn-default button-width" %>
<% end %>
<div class="row">
  <p id="notice"><%= notice %></p>
  <h1><%= t "admin.books" %></h1>
  <%= render @books %>
</div>
<%= will_paginate %>
