<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.search_field :title_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id_eq, options_from_collection_for_select(@categories, :id, :name),
      {}, class: "form-control" %>
  </div>
  <%= f.submit t("submit"), class: "btn btn-default button-width" %>
<% end %>
<div class="row">
  <p id="notice"><%= notice %></p>
  <h1><%= t "admin.books" %></h1>
  <%= render @books %>
</div>
<%= will_paginate %>
