<div class="container">
  <div class="col-md-4">
    <p id="notice"><%= notice %></p>
    <%= image_tag(@book.picture.url, height: Settings.picture.height_n, 
      width: Settings.picture.width_n) if @book.picture? %>
    <p>
      <strong><%= t "title.title" %>:</strong>
      <%= @book.title %>
    </p>
    <p>
      <strong><%= t "title.publish_date" %>:</strong>
      <%= @book.publish_date.day %>/<%= @book.publish_date.month %>/<%= @book.publish_date.year %>
    </p>
    <p>
      <strong><%= t "title.author" %>:</strong>
      <%= @book.author %>
    </p>
    <p>
      <strong><%= t "title.category" %>:</strong>
      <%= @book.category.name %>
    </p>
    <p>
      <strong><%= t "title.number_page" %>:</strong>
      <%= @book.number_page %>
    </p>
    <p>
      <strong><%= t "title.description" %>:</strong>
      <%= @book.description %>
    </p>
    <p>
      <div class = "star-rating" data-score= <%= @review.rating %> ></div>
    </p>
    <p>
      <div class="col-md-12">
        <div class="btn-group">
          <button type="button" class="btn btn-block btn-primary dropdown-toggle" data-toggle="dropdown">
            <%= t "book.mark-read" %><span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t("book.mark-reading"), "#" %></li>
            <li><%= link_to t("book.mark-read"), "#" %></li>
          </ul>
        </div>
      </div>
    </p>
  </div>
  <div class="col-md-8">
    <%= form_for [@book, @review], html: {multipart: true} do |f| %>
      <div class="field">
        <div class = "star-rating-review"></div>
        <%= f.text_field :content, placeholder: t("title"), class: "form-control" %>
        <%= f.text_area :thesis_statement, placeholder: t("compose_new_body"),
          class: "form-control" %>
      </div>
      <div class="col-md-2">
      <%= f.submit t("post"), class: "btn btn-primary" %>
      </div>
      <br>
      <%= render @reviews %>
    <% end %>
  </div>
</div>
