<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_page.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to_if current_user.admin?, t("dashboard"), admin_root_path %></li>
        <li><%= link_to t("static_page.home"), root_path %></li>
        <li><%= link_to t("static_page.help"), help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t("users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), "#" %></li>
              <li><%= link_to t("settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <li><%= link_to t("static_page.log_out"), destroy_user_session_path, method: :delete %></li>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_page.log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
